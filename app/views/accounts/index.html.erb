<h1>Users List</h1>
<table>
	<thead>
		<tr>
			<th>SL.No</th>
			<th>Email Address</th>
			<th>First Name</th>
			<th>Last Name</th>
			<th>Options</th>
		</tr>
	</thead>
	<tbody>
		<% @users.each_with_index do |user, index| %>
			<tr>
				<td><%= index + 1 %></td>
				<td><%= user.email %></td>
				<td><%= user.account.first_name %></td>
				<td><%= user.account.last_name %></td>
				<td>
					<%= link_to "View", account_path(user) %>
					<%= link_to "Edit", edit_account_path(user) %>
					<%= link_to "Destroy", account_path(user), method: :delete, data: { confirm: "Are you sure you want to destroy"} %>
				</td>
			</tr>
		<% end %>
	</tbody>
</table>
<%= link_to "Create New User", new_account_path %>